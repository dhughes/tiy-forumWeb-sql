<html>
<body>

{{^userName}}
    {{#loginFailed}}
        <div>Login failed!</div>
    {{/loginFailed}}
    <form action="/login" method="post">
        <input type="text" placeholder="Enter your name" name="loginName"/>
        <input type="password" placeholder="Enter your password" name="password"/>
        <button type="submit">Login</button>
    </form>
    <br>
{{/userName}}

{{#userName}}
    Welcome, {{.}}!
    <a href="/logout">Logout</a>
    <br>
{{/userName}}

{{#messages}}
    <a href="/?replyId={{id}}">{{author.name}}: {{text}}</a><br />
{{/messages}}

{{#userName}}
    <form action="/post-message" method="post">
        <textarea name="message" placeholder="Enter a message"></textarea>
        <input type="hidden" name="replyId" value="{{replyIdNum}}">

        <button type="submit">Post Message</button>
    </form>
    <br>
{{/userName}}

</body>
</html>